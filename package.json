{
  "name": "online-siteaccess",
  "version": "0.1.0",
  "private": true,
  "description": "Online siteaccess.ru - Chat widget and operator application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter './apps/*' --parallel dev",
    "dev:server": "pnpm --filter server dev",
    "dev:widget": "pnpm --filter widget dev",
    "dev:operator": "pnpm --filter operator-web dev",
    "build": "pnpm --filter './apps/*' build",
    "build:server": "pnpm --filter server build",
    "build:widget": "pnpm --filter widget build",
    "build:operator": "pnpm --filter operator-web build",
    "lint": "pnpm --filter './apps/*' --parallel lint",
    "test": "pnpm --filter './apps/*' --parallel test",
    "typecheck": "pnpm --filter './apps/*' --parallel typecheck",
    "clean": "pnpm --filter './apps/*' --parallel clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

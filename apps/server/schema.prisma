generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EncryptionMode {
  none
  server
  e2ee
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  channels    Channel[]
  memberships ChannelMember[]

  @@map("users")
}

model Channel {
  id             String         @id @default(uuid())
  name           String
  tokenHash      String         @unique
  allowedDomains Json? // ["site.ru", "www.site.ru"]
  encryptionMode EncryptionMode @default(server)
  ownerUserId    String? // nullable сначала
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  owner         User?           @relation(fields: [ownerUserId], references: [id], onDelete: SetNull)
  visitors      Visitor[]
  conversations Conversation[]
  members       ChannelMember[]

  @@index([ownerUserId])
  @@map("channels")
}

model Visitor {
  id         String   @id @default(uuid())
  channelId  String
  externalId String?  @unique
  lastSeenAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  channel       Channel        @relation(fields: [channelId], references: [id], onDelete: Cascade)
  conversations Conversation[]

  @@index([channelId])
  @@index([externalId])
  @@map("visitors")
}

model Conversation {
  id        String   @id @default(uuid())
  channelId String
  visitorId String
  status    String   @default("open") // open, closed, archived
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  channel  Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  visitor  Visitor   @relation(fields: [visitorId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([channelId])
  @@index([visitorId])
  @@index([status])
  @@map("conversations")
}

model Message {
  id                String   @id @default(uuid())
  conversationId    String
  senderType        String // "visitor" | "operator"
  senderId          String? // operator userId if senderType == "operator"
  text              String?
  ciphertext        String? // зашифрованный текст (для encryptionMode: server/e2ee)
  encryptionVersion Int      @default(0) // версия алгоритма шифрования
  clientMessageId   String?  @unique // для дедупликации от виджета
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  attachments  Attachment[]

  @@index([conversationId])
  @@index([createdAt])
  @@index([clientMessageId])
  @@map("messages")
}

model Attachment {
  id        String   @id @default(uuid())
  messageId String
  url       String
  type      String
  fileName  String?
  fileSize  Int?
  mimeType  String?
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@map("attachments")
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  userId    String
  role      String // 'owner' | 'operator' (MVP)
  createdAt DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([userId])
  @@index([channelId])
  @@map("channel_members")
}
